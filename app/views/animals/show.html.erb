<body class="animal">
  <div class="text-center">
    <br><br>
    <div class="well animal-info">
    <h3><%= @animal.name %></h3>
    <br>
    <img src="<%= @animal.image_path %>", class="animal-show">
    <!-- <%= image_tag(@animal.image_path, size: "300", :class => "img-rounded") %> -->
    <br><br>
    <%= @animal.description %>
    <br><br>
    <strong>Price: $<%= @animal.price %>.00</strong>
    <br>
    <% if @animal.extinct? %>
    <h3>This Animal is Extinct</h3>
    <% else %>
    <%= button_to "Add to Cart", cart_animals_path(id: @animal.id), class: "btn btn-success" %>
    <% end %>
  </div>
  <br>
</div>
</body>
