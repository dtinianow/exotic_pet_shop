<header class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">FANCY <i class="glyphicon glyphicon-plus"></i> BEAST</a>
    <ul class="nav navbar-nav">
      <li><%= link_to "All Animals", animals_path %></li>
      <li><%= link_to "Categories", categories_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if current_admin? %>
        <li><%= link_to "Dashboard", admin_dashboard_path %></li>
      <% elsif current_user %>
        <li><%= link_to "Dashboard", dashboard_path %></li>
      <% end %>
        <li><%= link_to "View Cart (#{@cart.total})", cart_path %></li>
      <% if !current_user %>
        <li><%= link_to "Login", login_path %></li>
      <% else %>
        <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <li>Logged in as <%= current_user.username %></li>
      <% end %>
    </ul>
  </div>
</header>
